
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/FirmaPanel/Views/Shared/_FirmaPanel.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-content">
                <h4 class="card-title">Isıtma Bilgisi</h4>
                <div class="table-responsive material-datatables ">
                    <table id="isitma" class="table table-bordered">
                        <thead class="text-primary">
                            <tr>
                                <th>ID</th>
                                <th>AD</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Isitma in ViewBag.Isitma)
                            {
                                <tr>
                                    <td>@Isitma.Isıtma_ID</td>
                                    <td>@Isitma.Isıtma_AD</td>                                    
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                    <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target=".isitma">Isıtma Ekle</button>
                  
                   
                </div>
            </div>
        </div>
    </div>
